# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
DEBUG=False
LOG_LEVEL=INFO

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
LEGAL_BERT_MODEL=nlpaueb/legal-bert-base-uncased
LLAMA_MODEL=meta-llama/Llama-2-13b-chat-hf
SENTENCE_TRANSFORMER_MODEL=sentence-transformers/all-MiniLM-L6-v2
USE_GPU=True

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================
MAX_FILE_SIZE_MB=10
OCR_LANGUAGE=eng
CONFIDENCE_THRESHOLD=0.75

# API Keys (Required for Multi-Platform Integration)

# Serper API - Get free key at https://serper.dev (2,500 searches/month free)
SERPER_API_KEY=your_serper_api_key_here

# Groq API - Get free key at https://console.groq.com (14,400 requests/day free)
GROQ_API_KEY=your_groq_api_key_here

# Google Sheets API
# Create service account and download JSON: https://console.cloud.google.com
# Save the JSON file as: config/google_credentials.json
# Follow setup guide: GOOGLE_SHEETS_SETUP_CHECKLIST.md

# Legacy API Keys (Optional)
OPENAI_API_KEY=
SLACK_WEBHOOK_URL=

# Slack Integration (for team notifications)
# Get tokens from: https://api.slack.com/apps
# Bot User OAuth Token (starts with xoxb-)
SLACK_BOT_TOKEN=your_bot_token_here
# App-Level Token (optional, for WebSocket connections)
SLACK_APP_TOKEN=your_app_token_here
# Client credentials (for OAuth flow)
SLACK_CLIENT_ID=your_client_id
SLACK_CLIENT_SECRET=your_client_secret
SLACK_SIGNING_SECRET=your_signing_secret
SLACK_WEBHOOK_URL=
# =============================================================================
# SLACK INTEGRATION
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#compliance-alerts
SLACK_RISK_THRESHOLD=80
SLACK_EXPIRY_WARNING_DAYS=30

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Choose one: smtp, sendgrid, mailgun
EMAIL_SERVICE=smtp
EMAIL_FROM=compliance@yourcompany.com
LEGAL_TEAM_EMAIL=legal@yourcompany.com

# SMTP Configuration (Gmail, Outlook, etc.)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# SendGrid Configuration (Alternative)
SENDGRID_API_KEY=

# Mailgun Configuration (Alternative)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# =============================================================================
# GOOGLE SHEETS INTEGRATION
# =============================================================================
GOOGLE_SHEETS_CREDENTIALS_PATH=./config/google-sheets-credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=
GOOGLE_SHEETS_COMPLIANCE_TAB=Compliance_Status

# =============================================================================
# REGULATORY APIS
# =============================================================================
SEC_EDGAR_API_URL=https://www.sec.gov/cgi-bin/browse-edgar
REGULATORY_USER_AGENT=YourCompany-ComplianceBot/1.0 (your-email@company.com)
POLLING_INTERVAL_HOURS=24

# =============================================================================
# OPENAI INTEGRATION (for AI-powered amendments)
# =============================================================================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.3
